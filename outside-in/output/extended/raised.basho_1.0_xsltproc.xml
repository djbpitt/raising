    <tei:body xml:id="body">
      <tei:head xml:id="h1">The Village Without Bells</tei:head>
      <tei:lg xml:id="lg1">
	<tei:l xml:id="L1">A village where they ring</tei:l>
	<tei:l xml:id="L2">no bells! — Oh, what do they do</tei:l>
	<tei:l xml:id="L3">at dusk in spring?</tei:l>
      </tei:lg>
